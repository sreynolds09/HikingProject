@using HikingFinalProject.DTOs.Routes
@model HikingRouteDto

<!-- Create Route Modal -->
<div class="modal fade" id="createRouteModal" tabindex="-1" aria-labelledby="createRouteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="HikingRoutes" asp-action="Create" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="createRouteModalLabel">Add Route</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Route Name</label>
                        <input asp-for="RouteName" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Difficulty</label>
                        <select asp-for="Difficulty" class="form-select">
                            <option>Easy</option>
                            <option>Moderate</option>
                            <option>Hard</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Distance (miles)</label>
                        <input asp-for="Distance" class="form-control" type="number" step="0.1" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Park</label>
                        <select asp-for="ParkID" class="form-select">
                            <!-- Populate dynamically with parks -->
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Route Modal -->
<div class="modal fade" id="editRouteModal" tabindex="-1" aria-labelledby="editRouteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="HikingRoutes" asp-action="Edit" method="post">
                <input type="hidden" name="RouteID" id="editRouteId" />
                <div class="modal-header">
                    <h5 class="modal-title" id="editRouteModalLabel">Edit Route</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Route Name</label>
                        <input name="RouteName" id="editRouteName" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Difficulty</label>
                        <select name="Difficulty" id="editRouteDifficulty" class="form-select">
                            <option>Easy</option>
                            <option>Moderate</option>
                            <option>Hard</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Distance (miles)</label>
                        <input name="Distance" id="editRouteDistance" class="form-control" type="number" step="0.1" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Park</label>
                        <select name="ParkID" id="editRoutePark" class="form-select">
                            <!-- Populate dynamically -->
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Route Modal -->
<div class="modal fade" id="deleteRouteModal" tabindex="-1" aria-labelledby="deleteRouteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="HikingRoutes" asp-action="DeleteConfirmed" method="post">
                <input type="hidden" name="RouteID" id="deleteRouteId" />
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteRouteModalLabel">Delete Route</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete <strong id="deleteRouteName"></strong>?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>


