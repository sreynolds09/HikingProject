@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Dashboard";
    var token = Configuration["Mapbox:AccessToken"] ?? "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="mapbox-token" content="@token" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://api.mapbox.com/mapbox-gl-js/v3.2.0/mapbox-gl.js"></script>
    <link href="https://api.mapbox.com/mapbox-gl-js/v3.2.0/mapbox-gl.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid py-4">

        <!-- KPI CARDS -->
        <div class="row g-3 mb-4">
            <div class="col-md-2 col-6"><div class="kpi-card"><h5>Parks</h5><h2 id="statParks">@Model.TotalParks</h2></div></div>
            <div class="col-md-2 col-6"><div class="kpi-card"><h5>Routes</h5><h2 id="statRoutes">@Model.TotalRoutes</h2></div></div>
            <div class="col-md-2 col-6"><div class="kpi-card"><h5>Feedback</h5><h2 id="statFeedback">@Model.TotalFeedback</h2></div></div>
            <div class="col-md-2 col-6"><div class="kpi-card"><h5>Images</h5><h2 id="statImages">@Model.TotalImages</h2></div></div>
        </div>

        <!-- DASHBOARD MAP -->
        <div class="row mb-4">
            <div class="col-12">
                <div id="dashboardMap" style="height:400px" class="rounded border"></div>
            </div>
        </div>

        <!-- TABLES -->
        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="mb-0">Routes</h5>
                    <input id="routesSearch" class="form-control form-control-sm" placeholder="Search routes..." style="max-width: 240px;">
                </div>
                <table id="routesTable" class="table table-sm table-dark table-striped align-middle">
                    <thead><tr><th>Name</th><th>Park</th><th>Difficulty</th><th>Distance</th><th></th></tr></thead>
                    <tbody id="routesTableBody"></tbody>
                </table>
            </div>
            <div class="col-lg-6 mb-4">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h5 class="mb-0">Parks</h5>
                    <input id="parksSearch" class="form-control form-control-sm" placeholder="Search parks..." style="max-width: 240px;">
                </div>
                <table id="parksTable" class="table table-sm table-dark table-striped align-middle">
                    <thead><tr><th>Name</th><th>Location</th><th>Routes</th><th></th></tr></thead>
                    <tbody id="parksTableBody"></tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6 mb-4">
                <h5>Images</h5>
                <div id="routeImagesGrid" class="row"></div>
            </div>
            <div class="col-lg-6 mb-4">
                <h5>Feedback</h5>
                <table id="feedbackTable" class="table table-sm table-dark table-striped align-middle">
                    <thead><tr><th>Route</th><th>User</th><th>Comment</th><th>Rating</th><th></th></tr></thead>
                    <tbody id="feedbackTableBody"></tbody>
                </table>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("_SharedModals")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>

<!-- =========================== -->
<!-- SCRIPTS -->
<!-- =========================== -->
@section Scripts {
    <link href="https://api.mapbox.com/mapbox-gl-js/v3.4.0/mapbox-gl.css" rel="stylesheet">
    <script src="https://api.mapbox.com/mapbox-gl-js/v3.4.0/mapbox-gl.js"></script>

    <meta name="mapbox-token" content="@token" />
    <script src="~/js/site.js"></script>
}












